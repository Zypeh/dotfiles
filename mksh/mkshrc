PS1='$(_prompt) '
PS2='>>'

HISTSIZR=10240
HISTFILE=~/.history

alias l='ls -1 --color=auto'
alias ll='l -l'
alias lla='ll -a'

PRINT='echo -n'
[ `$PRINT | wc -c` -ne 0 ] && PRINT=printf

_prompt() {
	case $? in
	# EXIT_SUCCESS or ^C
	0|130)
		RET=240
		;;
	# Command not found
	127)
		RET=196
		;;
	*)
		RET=202
		;;
	esac

	RET="\e[38;5;${RET}m"
	RET="${RET}-\e[0m "
	
	$PRINT $RET
}

